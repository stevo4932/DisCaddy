<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:id="@+id/scorecard_course_name"
        android:layout_width="wrap_content"
        android:text="Course"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/scorecard_current_hole"
        android:layout_width="wrap_content"
        android:text="Current Hole"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scorecard_course_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="55dip"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/scorecard_current_hole"
        android:id="@+id/listviewlayout">

        <ListView
            android:id="@+id/scorecard_list"
            android:layout_width="fill_parent"
            android:layout_height="446dp">
        </ListView>
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Next Hole"
        android:id="@+id/next_hole_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Previous Hole"
        android:id="@+id/previous_hole_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>